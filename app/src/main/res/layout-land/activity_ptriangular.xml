<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrianguloActivity" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ptriangular"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:id="@+id/lblBase"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="130dp"
        android:minHeight="48dp"
        android:textSize="17dp"
        android:text="Valor de la base del Triángulo" />

    <EditText
        android:id="@+id/tfBase"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="120dp"
        android:inputType="number"
        android:hint="0"
        android:textSize="16dp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblTAltura"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="175dp"
        android:minHeight="48dp"
        android:textSize="17dp"
        android:text="Valor de la altura del Triángulo" />

    <EditText
        android:id="@+id/tfTAltura"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="170dp"
        android:inputType="number"
        android:hint="0"
        android:textSize="16dp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblPAltura"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="215dp"
        android:minHeight="48dp"
        android:textSize="17dp"
        android:text="Valor de la altura del Prisma" />

    <EditText
        android:id="@+id/tfPAltura"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="205dp"
        android:inputType="number"
        android:hint="0"
        android:textSize="16dp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/lblRVolumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="270dp"
        android:minHeight="48dp"
        android:text="Volumen = "
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lblVolumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="270dp"
        android:minHeight="48dp"
        android:text="0"
        android:textSize="16dp" />
    
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="200dp"
        android:text="Calcular" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="200dp"
        android:text="Limpiar" />


</RelativeLayout>